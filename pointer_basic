#include <iostream>

int main() {
    int num = 10;      // Declare an integer variable
    int *ptr = &num;   // Declare a pointer and store the address of 'num'

    // Displaying values
    std::cout << "Value of num: " << num << std::endl;
    std::cout << "Address of num: " << &num << std::endl;
    std::cout << "Pointer ptr stores address: " << ptr << std::endl;
    std::cout << "Value at address stored in ptr: " << *ptr << std::endl; // Dereferencing pointer

    // Changing value using pointer
    *ptr = 20;
    std::cout << "New value of num after modifying through pointer: " << num << std::endl;

    return 0;
}
